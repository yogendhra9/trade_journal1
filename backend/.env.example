# =================================
# Server Configuration
# =================================
PORT=5000
NODE_ENV=production

# =================================
# Database
# =================================
# Use MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/hindsight?retryWrites=true&w=majority

# =================================
# Authentication
# =================================
# JWT secret - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# =================================
# Frontend URL (for CORS)
# =================================
FRONTEND_URL=https://your-domain.com

# =================================
# Broker APIs
# =================================
# Dhan
DHAN_CLIENT_ID=your_dhan_client_id
DHAN_CLIENT_SECRET=your_dhan_client_secret
DHAN_REDIRECT_URI=https://your-domain.com/broker/dhan/callback

# Angel One
ANGEL_ONE_API_KEY=your_angel_one_api_key
ANGEL_ONE_CLIENT_ID=your_angel_one_client_id
ANGEL_ONE_REDIRECT_URI=https://your-domain.com/broker/angelone/callback

# =================================
# AI/OpenAI (for chat analysis)
# =================================
OPENAI_API_KEY=your_openai_api_key
